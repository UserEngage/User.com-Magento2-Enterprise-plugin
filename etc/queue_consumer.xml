<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework-message-queue:etc/consumer.xsd">
    <consumer name="usercom.customer.sync"
              queue="usercom.customer.sync"
              handler="Usercom\Analytics\Model\CustomerSync::syncCustomerById"/>
    <consumer name="usercom.catalog.product.event"
              queue="usercom.catalog.product.event"
              handler="Usercom\Analytics\Model\CatalogSync::productView"/>
    <consumer name="usercom.checkout.product.add"
              queue="usercom.checkout.product.add"
              handler="Usercom\Analytics\Model\CheckoutSync::addToCart"/>
    <consumer name="usercom.checkout.product.purchase"
              queue="usercom.checkout.product.purchase"
              handler="Usercom\Analytics\Model\CheckoutSync::purchase"/>
</config>
